<div id="container">

    <div id="input">
        <h1>Movies</h1>
        <%= @movie["Title"] %>
    </div>


<% if @movie %>
<h1><a href="https://www.google.com/search?q=<%= @movie["Title"] %>" target="_blank"><%= @movie["Title"] %></a></h1>
<img src="<%= @movie["Poster"] %>" alt="">
<ul>
    <li>Year: <%= @movie["Year"] %></li>
    <li>Rated: <%= @movie["Rated"] %></li>
    <li>Released: <%= @movie["Released"] %></li>
    <li>Runtime: <%= @movie["Runtime"] %></li>
    <li>Genre: <%= @movie["Genre"] %></li>
    <li>Director: <%= @movie["Director"] %></li>
    <li>Writer: <%= @movie["Writer"] %></li>
    <li>Actors: <%= @movie["Actors"] %></li>
    <li>Plot: <%= @movie["Plot"] %></li>
    <li>Language: <%= @movie["Language"] %></li>
    <li>Country: <%= @movie["Country"] %></li>
    <li>Awards: <%= @movie["Awards"] %></li>
    <li>Poster: <%= @movie["Poster"] %></li>
    <li>imdbRating: <%= @movie["imdbRating"] %></li>
</ul>
<% end %>

</div>